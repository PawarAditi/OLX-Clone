        </tr>
        <tbody>
            <%
                if(data.length > 0){
                    data.forEach(function (element){
                        %>
                        <tr>
                            <td><%=element.fname%></td>
                            <td><%=element.email%></td>
                            <td>
                                <button class="btnAction" onclick="window.location.href = '/admin/viewFull/<%=element._id%>/';">
                                    View Full Details
                                </button>
                            </td>
                            
                       
                        </tr>
                        <%
                    })
                }
            %>
    
        </tbody>
</table>    
